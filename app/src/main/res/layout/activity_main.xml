<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="3"
    tools:context="com.example.administrateur.webservicedemo.MainActivity">


    <EditText
        android:id="@+id/txtCode"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSearchCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Par Code"
        android:layout_alignTop="@+id/txtCode"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:onClick="Search"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSearchCode"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/btnSearchCode"
        android:layout_toRightOf="@+id/btnSearchCode"
        android:text="All"
        android:onClick="All"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Nom du pays :"
        android:textSize="15dp"
        android:layout_below="@+id/btnSearchCode"
        android:layout_alignLeft="@+id/txtCode"
        android:layout_alignStart="@+id/txtCode" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:text=""
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="26dp"
        android:text=""
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lstResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/txtResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
